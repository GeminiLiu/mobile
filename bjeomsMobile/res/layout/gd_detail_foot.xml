<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/bottom_bg"
    android:orientation="horizontal" 
    
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/arrive_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_receive" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/leave_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_send" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/complete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_back" />
    </LinearLayout>

 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/recode_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xj_detail_record" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/photo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_response" />
    </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" >
        <ImageButton
            android:id="@+id/hidden_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xj_detail_yh" />
    </LinearLayout>

</LinearLayout>