<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="0dp"
	android:padding="0dp"
	android:orientation="vertical"
	android:gravity="center">
	<RelativeLayout
		android:id="@+id/rl_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="0dp"
		android:padding="0dp">
		<LinearLayout
			android:id="@+id/rl_top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="7dp"
			android:padding="0dp"
			android:background="@drawable/widget_top"
			android:layout_alignParentTop="true"
			android:gravity="center_vertical|center_horizontal">
			<TextView
				android:id="@+id/tv_title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginTop="12dp"
				android:layout_marginBottom="12dp"
				android:layout_marginLeft="45dp"
				android:gravity="center"
				android:text="宁夏移动EOMS"
				android:textColor="#ffffff"
				android:textSize="15sp"/>
			<ImageView 
				android:id="@+id/iv_widget_refresh"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginRight="10dp"
				android:background="@drawable/btn_refresh"
				android:contentDescription="@null"/>
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/ll_image"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="10dip"
		    android:layout_marginTop="0dip"
		    android:background="@drawable/logo"
		    android:orientation="vertical" />

	</RelativeLayout>
	<LinearLayout
		android:id="@+id/ll_content_main"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginLeft="2dip"
		android:layout_marginRight="2dip"
		android:gravity="top|center_horizontal"
		android:background="#ffffff"
		android:orientation="horizontal"
		android:baselineAligned="false">
		<LinearLayout
			android:id="@+id/ll_content_left"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:paddingTop="0dp"
			android:paddingBottom="5dp"
			android:gravity="center"
			android:background="#ffffff"
			android:orientation="vertical">		
			<LinearLayout
				android:id="@+id/ll_widget_loading"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical|center_horizontal"
				android:visibility="gone">
				<ProgressBar 
					android:layout_width="20dp" 
					android:layout_height="20dp"
	       			style="@android:style/Widget.ProgressBar.Inverse"/>
			   	<TextView
					android:id="@+id/ll_widget_loading_text"
				    android:layout_marginLeft="10dip"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="正在登录"
				    android:textColor="@color/black"
					android:textSize="14sp"/>
			</LinearLayout>
			<TextView
				android:id="@+id/tv_widget_msg"
				android:layout_width="wrap_content"
				android:layout_height="100dp"
				android:text="暂无数据"
				android:visibility="gone"
			    android:textColor="@color/black"
				android:textSize="14sp" />
			<LinearLayout
				android:id="@+id/ll_widget_content"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="0dp"
				android:gravity="top|center_horizontal"
				android:background="#ffffff"
				android:orientation="vertical"
				android:visibility="gone"/>
		</LinearLayout>
		<RelativeLayout
			android:id="@+id/ll_content_page"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:paddingRight="5dp"
			android:gravity="top|center_horizontal"
			android:background="#ffffff"
			android:orientation="horizontal"
			android:visibility="gone">
			<ImageView 
				android:id="@+id/iv_content_page_up"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_marginTop="15dp"
			    android:src="@drawable/widget_page_up"
			    android:background="@drawable/bg_btn_widget_page_blue_x"
			    android:contentDescription="@null"/>
			<TextView
				android:id="@+id/iv_content_page_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
			    android:textColor="@color/black"
				android:textSize="10sp" />
			<ImageView 
				android:id="@+id/iv_content_page_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="15dp"
			    android:src="@drawable/widget_page_down"
			    android:background="@drawable/bg_btn_widget_page_blue_x"
			    android:contentDescription="@null"/>
		</RelativeLayout>
	</LinearLayout>
	<ImageView
		android:id="@+id/iv_line"
		android:layout_width="match_parent"
		android:layout_height="0.5dip"
		android:layout_marginLeft="2dip"
		android:layout_marginRight="2dip"
		android:background="@drawable/widget_line2"
		android:contentDescription="@null"
		android:visibility="gone" />
	<LinearLayout
		android:id="@+id/ll_down"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="2dip"
		android:layout_marginRight="2dip"
		android:gravity="center"
		android:background="#ffffff"
		android:visibility="gone">
		<ImageButton
			android:id="@+id/imageButton1"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/widget_gd"
			android:contentDescription="@null" />
		<!-- 
		<ImageButton
			android:id="@+id/imageButton2"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/widget_xj"
			android:layout_marginLeft="45dip"
		android:contentDescription="@null" />
		<ImageButton
			android:id="@+id/imageButton3"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/widget_yh"
			android:layout_marginLeft="45dip"
		android:contentDescription="@null" />
		-->
		<ImageButton
			android:id="@+id/imageButton3"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/main_icon_noticea"
			android:layout_marginLeft="45dip"
		android:contentDescription="@null" />
		<ImageButton
			android:id="@+id/ib_widget_set"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/widget_set"
			android:layout_marginLeft="45dip"
			android:contentDescription="@null" />
	</LinearLayout>
</LinearLayout>